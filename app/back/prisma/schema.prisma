generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String
  income    Income[]
  expenses  Expenses[]
}

model Income {
  id          String   @id @default(uuid())
  userId      String
  user        User @relation(fields: [userId], references: [id])
  category    String
  description String
  source      String
  value       Float
  date        DateTime @default(now())
}
model Expenses { 
  id          String   @id @default(uuid())
  userId      String
  user        User @relation(fields: [userId], references: [id])
  category    String
  description String
  source      String
  value       Float
  date        DateTime @default(now())
}